<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="API Regression Suite" verbose="3">

    <listeners>
        <listener
                class-name="com.qa.api.listeners.ExtentReportListener" />
    </listeners>

    <test name="Create User Test">
        <classes>
            <class name="com.qa.api.tests.CreateUserTest"/>
        </classes>
    </test>

    <test name="GET User Test">

        <classes>
            <class name="com.qa.api.tests.GetUserTest"/>
        </classes>
    </test>

    <test name="Update User Test">

        <classes>
            <class name="com.qa.api.tests.UpdateUserTest"/>
        </classes>
    </test>

    <test name="Partial User Test">

        <classes>
            <class name="com.qa.api.tests.PatchUserTest"/>
        </classes>
    </test>

    <test name="Delete User Test">

        <classes>
            <class name="com.qa.api.tests.DeleteUserTest"/>
        </classes>
    </test>

    <test name="Req Res User Test">

        <classes>
            <class name="com.qa.api.reqres.api.tests.ReqresTest"/>
        </classes>
    </test>

    <test name="Contacts API Test">

        <classes>
            <class name="com.qa.api.contacts.ContactsApiTest"/>
        </classes>
    </test>

    <test name="Product API Test">
        <classes>
            <class name="com.qa.api.products.api.test.ProductsApiTest"/>
        </classes>
    </test>

    <test name="Amadeus API Test">
        <classes>
            <class name="com.qa.api.amadeus.test.AmadeusApiTest"/>
        </classes>
    </test>
</suite>
